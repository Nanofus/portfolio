---
import { FAVICON, SITE_TITLE } from "src/consts";

const { current = "" } = Astro.props;
---

<style></style>

<header>
	<nav>
		<a class={current === "" ? "selected" : ""} href="/">
			<span>{FAVICON} {SITE_TITLE}</span>
		</a>
		<span class="filler"></span>
		<a class={current === "writing" ? "selected" : ""} href="/writing"
			>Writing</a
		>
	</nav>
</header>

<style>
	header {
		display: flex;
		margin: 0 auto;
		padding: 2rem;
		width: 100%;
	}

	nav {
		align-items: center;
		display: flex;
		flex: 1;
		font-family: var(--font-family-sans), sans-serif;
		font-weight: 500;
		justify-content: flex-end;
	}

	.filler {
		flex-grow: 1;
	}

	a {
		text-decoration: none;
		padding: 1rem;
		display: block;
		position: relative;
		text-align: center;
	}

	a:not(.selected) {
		opacity: 0.7;
	}
</style>
