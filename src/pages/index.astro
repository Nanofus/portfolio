---
import BaseLayout from "../layouts/BaseLayout.astro";
import VisualizationCanvas from "../components/VisualizationCanvas.svelte";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

const permalink = Astro.site!.href;
---

<BaseLayout
	title={SITE_TITLE}
	description={SITE_DESCRIPTION}
	permalink={permalink}
>
	<VisualizationCanvas client:load />

	<div class="home-container">
		<div class="home-copy">
			<h1>{SITE_TITLE}</h1>
			<p>{SITE_DESCRIPTION}</p>
		</div>
	</div>
</BaseLayout>

<style>
	.home-container {
		align-items: center;
		display: flex;
		flex: 1;
	}

	.home-copy {
		z-index: 1;
		flex: 1;
		pointer-events: none;
	}

	.home-copy > * {
		pointer-events: all;
	}

	.home-copy h1 {
		font-family: var(--font-family-serif), serif;
		font-weight: 400;
		margin-bottom: 0.5rem;
		line-height: 1.3;
		width: fit-content;
	}

	.home-copy p {
		font-size: 1.3rem;
		width: fit-content;
	}

	@media (max-width: 1200px) {
		p {
			font-size: 1.2rem;
		}
	}

	@media (max-width: 800px) {
		.home-container {
			flex-direction: column;
		}

		.home-copy {
			flex: 0;
			padding-bottom: 2rem;
		}
	}
</style>
